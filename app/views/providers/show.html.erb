<%= go_back_link providers_path %>
<div class="row justify-content-center">
  <div class="col-sm-12 col-md-8">
    <div class="card card-fluid">
      <h6 class="card-header"> <%= v_t('title') %> </h6>
      <div class="card-body">
        <dl class="row">
          <%= show_field ar_t('provider.name'), @provider.name %>
          <%= show_field ar_t('provider.country_id'), @provider.country.name %>
          <%= show_field_yes_no_label ar_t('provider.active'), @provider.active ? 'Si' : 'No' %>
          <%= show_field ar_t('provider.delivery_condition'), @provider.delivery_condition %>
        </dl>
      </div>
      <div class="card-footer text-right">
        <%= link_to v_t('edit_link'), edit_provider_path(@provider) %>
        <span class="mx-1"></span>
        <%= link_to v_t('destroy_link'), @provider, method: :delete, data: { confirm: v_t('destroy_confirm_message')}, class: destroy_link_class %>
      </div>
    </div>
  </div>
</div>