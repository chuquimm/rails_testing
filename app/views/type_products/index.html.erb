<div class="row">
  <div class="col-sm-12 col-md-12">
    <div class="card card-fluid">
      <h6 class="card-header"> <%= v_t('title') %> </h6>
      <div class="card-body">
        <div class="text-right">
          <%= link_to ('<i class="fas fa-plus"></i> '+v_t('new_link')).html_safe, new_type_product_path %>
        </div>
        <div class="table-responsive">
          <table class="table table-bordered table-hover table-sm">
            <thead class="thead-light">
              <tr>
                <th>#</th>
                <th><%= ar_t('type_product.name') %></th>
                <th><%= ar_t('type_product.description') %></th>
                <th><%= ar_t('type_product.active') %></th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <% @type_products.each_with_index do |type_product, index| %>
                <tr>
                  <td><%= index + 1 %></td>
                  <td><%= type_product.name %></td>
                  <td><%= type_product.description %></td>
                  <td><%= type_product.active ? 'Si' : 'No' %></td>
                  <td><%= link_to v_t('show_link'), type_product %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  <div>
</div>