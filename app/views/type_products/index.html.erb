<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <p id="notice"><%= notice %></p>
      <div class="card">
        <div class="card-header">
          <h1>Tipo de productos</h1>
        </div>
        <div class="card-body">
          <table class="table">
            <thead>
              <tr>
                <th>Nombre</th>
                <th>Descripci√≥n</th>
                <th>Activo</th>
                <th colspan="3"></th>
              </tr>
            </thead>

            <tbody>
              <% @type_products.each do |type_product| %>
                <tr>
                  <td><%= type_product.name %></td>
                  <td><%= type_product.description %></td>
                  <td><%= type_product.active %></td>
                  <td><%= link_to 'Mostrar', type_product %></td>
                  <td><%= link_to 'Editar', edit_type_product_path(type_product) %></td>
                  <td><%= link_to 'Eliminar', type_product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
        <div class="card-footer">
          <%= link_to 'Nuevo tipo de producto', new_type_product_path %>
        </div>
      </div>
    </div>
  </div>
</div>