<div class="form-group row">
  <%= form.label field_name, ar_t(model_name + '.' + field_name), class: 'col-form-label col-sm-12 col-md-4' %>
  <div class="col-sm-12 col-md-8">
    <%= form.check_box field_name,
    class: 'form-control ' + (field_with_errors form, field_name),
    placeholder: ar_t(model_name + '.' + field_name),
    autofocus: autofocus %>
  </div>
</div>